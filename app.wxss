.container{
  padding: 15rpx;
  position: relative;
}
page{
    background-color: #F8F8F8;
    font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
    font-size: 10pt;
    color: #666;
}

.card{
  font-family: Arial, Helvetica, sans-serif;
  background: #FFF;
  border-radius:5%;
  min-height: 60rpx;
  padding: 30rpx;
  font-weight: 300;
  color: #000;
  margin-bottom: 10rpx;
}

.card .title{
  font-size: 30rpx;
  display: block;
}

.card .content{
  font-size: 28rpx;
  margin-top:15rpx 
}

.remind-box {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-bottom: 300rpx;
}

.remind-img {
  width: 250rpx;
  height: 250rpx;
  padding-bottom: 25rpx;
}
.remind-text {
  font-size: 12pt;
  line-height: 150%;
}
.remind-btn {
  margin-top: 20rpx;
  font-size: 10pt;
  padding: 0rpx 18rpx;
  text-align: center;
  background-color: #7acfa6;
  border-radius: 5px; 
  border-bottom: 2px solid #4fc08d;
  color: #fff;
}