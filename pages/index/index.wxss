/**index.wxss**/
button.form_button {
  background-color: transparent;
  padding: 0;
  margin: 0;
  display: inline;
  position: static;
  border: 0;
  padding-left: 0;
  padding-right: 0;
  border-radius: 0;
  font-size: 26rpx;
}

button.form_button::after {
  content: '';
  width: 0;
  height: 0;
  -webkit-transform: scale(1);
  transform: scale(1);
  display: none;
  background-color: transparent;
}

.navs {
  padding: 10rpx 30rpx;
  display: flex;
  align-items: flex-start;
  flex-flow: column wrap;
  flex-direction: row;
  height: 100%;
}

.nav {
  width: 25%;
}

.nav-icon {
  display: block;
  width: 85rpx;
  height: 85rpx;
  margin: 15rpx auto;
}

.nav-desc {
