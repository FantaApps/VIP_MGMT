<view class='container'>
  <view class='fix'>
    <view class='header'>
    </view>
    <view class="search layout-row layout-space-between-center">
      <text class='text-body2'>当前选择:{{building[index]}}</text>
      <picker value="{{index}}" range="{{building}}" bindchange="bindPickerChange">
        <sc-button sc-class="sc-btn sc-outlined-btn" size='small'>切换地点</sc-button>
      </picker>
    </view>
  </view>
  <view class='card text-caption' style='margin-top:180rpx'>
    <view class="thead layout-row layout-space-between-center text-body2">
      <view>教室</view>
      <view>一大节</view>
      <view>二大节</view>
      <view>三大节</view>
      <view>四大节</view>
      <view>五大节</view>
    </view>
    <block wx:for="{{rooms}}" wx:key="{{index}}">
      <view class="row layout-row layout-space-between-center text-body2">
        <view class="room-name">{{index}}</view>
        <block wx:for="{{item}}" wx:for-item="val" wx:key="{{index}}">
          <view bindtap="show" class="item" data-wpyshow-a="{{val}}" data-wpyshow-b="{{index}}">
            <view class="{{val == '' ? 'not-use' : 'use'}}">{{val ? "课" : '空'}}</view>
          </view>
        </block>
      </view>
    </block>
  </view>
</view>